
{% block title %}Accueil{% endblock %}

{% block body %}
    <h2>Derniers commentaires</h2>
    <div class="latest-comments">
        {% for commentaire in commentaires %}
            <div class="comment">
                <p>{{ commentaire.commentaire }}</p>
                <p>Film : <a href="{{ path('app_film_detail', {'id': commentaire.films.id}) }}">{{ commentaire.films.name }}</a></p>
                <p>Posté par : {{ commentaire.users.username }} le {{ commentaire.getDateCommentaire|date('d/m/Y H:i') }}</p>            </div>
        {% else %}
            <p>Aucun commentaire récent.</p>
        {% endfor %}
    </div>
{% endblock %}
