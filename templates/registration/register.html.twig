{% extends 'empty.html.twig' %}

{% block body %}

<style>
    .alert-danger, .form-error-message {
        color: white;
    }
    .terms-label {
        color: white;
    }
</style>

<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Inscription</h3>
                    
                    {# Affichage des messages d'erreur #}
                    {% if app.flashes('error') %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endif %}
                    
                    {{ form_start(registrationForm) }}

                        {# Affichage des erreurs spécifiques au champ #}
                        {% for field in registrationForm %}
                            {% if field.vars.errors %}
                                <div class="form-error-message">
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                        {% endfor %}

                        <!-- Email Address -->
                        <div class="input__item">
                            {{ form_widget(registrationForm.email, {attr: {placeholder: 'Email', class: 'form-control'}}) }}
                            <span class="icon_mail"></span>
                        </div>

                        <!-- Username -->
                        <div class="input__item">
                            {{ form_widget(registrationForm.username, {attr: {placeholder: 'Pseudo', class: 'form-control'}}) }}
                            <span class="icon_profile"></span>
                        </div>

                        <!-- Name -->
                        <div class="input__item">
                            {{ form_widget(registrationForm.name, {attr: {placeholder: 'Nom', class: 'form-control'}}) }}
                            <span class="icon_profile"></span>
                        </div>

                        <!-- Nickname -->
                        <div class="input__item">
                            {{ form_widget(registrationForm.nickname, {attr: {placeholder: 'Surnom', class: 'form-control'}}) }}
                            <span class="icon_profile"></span>
                        </div>

                        <!-- Mot de passe -->
                        <div class="input__item">
                            {{ form_widget(registrationForm.plainPassword.first, {attr: {placeholder: 'Mot de passe', class: 'form-control'}}) }}
                            <span class="icon_lock"></span>
                        </div>

                        <!-- Confirmation de mot de passe -->
                        <div class="input__item">
                            {{ form_widget(registrationForm.plainPassword.second, {attr: {placeholder: 'Confirmer le mot de passe', class: 'form-control'}}) }}
                            <span class="icon_lock"></span>
                        </div>

                        <!-- Accepter les conditions d'utilisation -->
                        <div style="margin-top: 20px; margin-bottom: 20px;">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            <label for="{{ registrationForm.agreeTerms.vars.id }}" class="terms-label">Accepter les conditions d'utilisation</label>
                        </div>

                        <button type="submit" class="site-btn">Inscription</button>

                    {{ form_end(registrationForm) }}

                    <h5>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous!</a></h5>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__social__links">
                    <!-- ... votre contenu pour la connexion sociale ... -->
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
